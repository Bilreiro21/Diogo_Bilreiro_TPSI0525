{
  "imposters": [
    {
      "port": 4545,
      "protocol": "http",
      "name": "API Gestao de Alunos (Simples)",
      "stubs": [
        {
          "comment": "GET /api/alunos -> Lista todos os alunos",
          "predicates": [
            {
              "equals": {
                "method": "GET",
                "path": "/api/alunos"
              }
            }
          ],
          "responses": [
            {
              "is": {
                "statusCode": 200,
                "headers": {
                  "Content-Type": "application/json"
                },
                "body": [
                  { "id": 1, "nome": "Ana Silva", "idade": 22, "curso": "Engenharia Informática" },
                  { "id": 2, "nome": "Bruno Costa", "idade": 21, "curso": "Gestão" }
                ]
              }
            }
          ]
        },
        {
          "comment": "GET /api/alunos/{id} -> Mostra um aluno especifico",
          "predicates": [
            {
              "matches": {
                "method": "GET",
                "path": "^/api/alunos/\\d+$"
              }
            }
          ],
          "responses": [
            {
              "is": {
                "statusCode": 200,
                "headers": {
                  "Content-Type": "application/json"
                },
                "body": { "id": 1, "nome": "Ana Silva", "idade": 22, "curso": "Engenharia Informática" }
              }
            }
          ]
        },
        {
          "comment": "POST /api/alunos -> Adiciona um novo aluno",
          "predicates": [
            {
              "equals": {
                "method": "POST",
                "path": "/api/alunos"
              }
            }
          ],
          "responses": [
            {
              "is": {
                "statusCode": 201,
                "headers": {
                  "Content-Type": "application/json"
                },
                "body": { "id": 3, "nome": "Novo Aluno (Mock)", "idade": 20, "curso": "Economia" }
              }
            }
          ]
        },
        {
          "comment": "PUT /api/alunos/{id} -> Atualiza um aluno",
          "predicates": [
            {
              "matches": {
                "method": "PUT",
                "path": "^/api/alunos/\\d+$"
              }
            }
          ],
          "responses": [
            {
              "is": {
                "statusCode": 200,
                "headers": {
                  "Content-Type": "application/json"
                },
                "body": { "id": 1, "nome": "Ana Silva (Atualizada)", "idade": 23, "curso": "Engenharia Informática" }
              }
            }
          ]
        },
        {
          "comment": "DELETE /api/alunos/{id} -> Remove um aluno",
          "predicates": [
            {
              "matches": {
                "method": "DELETE",
                "path": "^/api/alunos/\\d+$"
              }
            }
          ],
          "responses": [
            {
              "is": {
                "statusCode": 204
              }
            }
          ]
        }
      ]
    }
  ]
}